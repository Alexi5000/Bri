# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Redis Configuration (optional - falls back to no cache if unavailable)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# Database Configuration
DATABASE_PATH=data/bri.db

# File Storage Configuration
VIDEO_STORAGE_PATH=data/videos
FRAME_STORAGE_PATH=data/frames
CACHE_STORAGE_PATH=data/cache

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Processing Configuration
MAX_FRAMES_PER_VIDEO=100
FRAME_EXTRACTION_INTERVAL=2.0
CACHE_TTL_HOURS=24

# Model Configuration
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=1024

# Memory Configuration
MAX_CONVERSATION_HISTORY=10

# Performance Configuration
TOOL_EXECUTION_TIMEOUT=120  # seconds
REQUEST_TIMEOUT=30  # seconds
LAZY_LOAD_BATCH_SIZE=3  # images per batch

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_ROTATION_ENABLED=true
LOG_JSON_FORMAT=false
